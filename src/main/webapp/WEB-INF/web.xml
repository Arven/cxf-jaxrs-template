<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
     version="2.5">

    <display-name>spring-cxf-example</display-name>
    
    <!-- Generic Servlet Class -->
    <servlet>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <display-name>CXF ApplicationServlet</display-name>
        <servlet-class>javax.ws.rs.core.Application</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Attach servlet to all patterns -->
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    
    <!-- Workaround for TomEE -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Hello Services</web-resource-name>
            <url-pattern>/v1/secure/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>rest-user</role-name>
        </auth-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>default</realm-name>
    </login-config>
    
</web-app>